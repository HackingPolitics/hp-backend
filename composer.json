{
    "name": "hacking-politics/hpo-backend",
    "description": "REST API for hackingPoliticsOnline",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-amqp": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "stof/doctrine-extensions-bundle": "^1.6.0",
        "api-platform/api-pack": "^1.3.0",
        "graylog2/gelf-php": "^1.7.0",
        "janakdom/jwt-refresh-token-bundle": "*",
        "lexik/jwt-authentication-bundle": "^2.11.3",
        "ocramius/proxy-manager": "^2.11.1",
        "sensio/framework-extra-bundle": "^5.6.1",
        "symfony/amqp-messenger": "^5.2.7",
        "symfony/dotenv": "^5.2.4",
        "symfony/flex": "^1.12.2",
        "symfony/mercure-bundle": "*",
        "symfony/monolog-bundle": "^3.7.0",
        "symfony/translation": "^5.2.8",
        "symfony/yaml": "^5.2.7",
        "tuupola/base62": "^2.1.0",
        "twig/intl-extra": "^3.3.0",
        "vrok/doctrine-addons": "^1.1.1",
        "vrok/monitoring-bundle": "^1.0.1",
        "vrok/symfony-addons": "^1.4.1"
    },
    "require-dev": {
        "api-platform/schema-generator": "^2.2.2",
        "doctrine/doctrine-fixtures-bundle": "^3.4.0",
        "friendsofphp/php-cs-fixer": "^2.19.0",
        "justinrainbow/json-schema": "^5.2.10",
        "phpunit/phpunit": "^8.5.15",
        "roave/security-advisories": "dev-master",
        "symfony/debug-pack": "^1.0.9",
        "symfony/http-client": "^5.2.8",
        "symfony/maker-bundle": "^1.31.1",
        "symfony/profiler-pack": "^1.0.5",
        "symfony/test-pack": "^1.0.7",
        "zalas/phpunit-globals": "^2.0.4"
    },
    "config": {
        "preferred-install": {
            "vrok/*": "source",
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff -v",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
